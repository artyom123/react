{
    "plugins": [
        "jsx-a11y",
        "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "jest": true,
        "node": true,
        "browser": true
    },
    "extends": [
        "airbnb",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:react-hooks/recommended"
    ],
    "rules": {
        "react/jsx-indent" : ["error", 4],
        "react/jsx-indent-props" : ["error", 4],
        "max-depth": ["error", 4],
        "semi": [ "error", "always" ],
        "indent": ["error", 4],
        "react/jsx-uses-vars": "error",
        "max-len": ["error", { "code": 100 }],
        "no-multi-spaces": "error",
        "no-console": [ 
            "error",
            {
                "allow": [
                "info",
                "warn",
                "error"
                ]
            }
        ]
    },
    "settings": {
        "react": {
            "version": "16.3"
        }
    }
}